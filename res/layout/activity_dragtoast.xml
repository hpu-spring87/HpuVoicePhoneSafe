<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    style="@android:style/Animation.Translucent"
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/rl_location"
        >
    <TextView
        android:drawableTop="@drawable/regist_emo"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/call_locate_orange"
        android:id="@+id/tv_location_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#88000000"
        android:text="@string/chinatowel"
        android:textSize="16sp" />
    </LinearLayout>
    
    <TextView 
         android:id="@+id/tv_bottom"
	    android:gravity="center"
	    android:textSize="18sp"
	    android:background="@drawable/call_locate_blue"
	    android:layout_alignParentBottom="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/locationtips"/>
    
    <TextView
        android:visibility="invisible"
	    android:id="@+id/tv_top" 
	    android:gravity="center"
	    android:textSize="18sp"
	    android:background="@drawable/call_locate_blue"
	    android:layout_alignParentTop="true"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/locationtips"/>
</RelativeLayout>