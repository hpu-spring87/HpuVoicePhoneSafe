<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009966"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_appclean_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/appcache_" />

    <ProgressBar
        android:id="@+id/pb_show_appclean"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:progressDrawable="@drawable/progress_horizontal" />

    <ImageView
        android:id="@+id/iv_sdcardclean_bg"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:contentDescription="@string/isdesc"
        android:paddingTop="100dp"
        android:src="@drawable/sdcard_clean_bg" />

</LinearLayout>