<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/splash_bg"
	android:orientation="vertical"
	android:id="@+id/ll_splash"
    tools:context="com.hpuvoice.phonesafe.SplashActivity" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="8.0"
        >
    <TextView
        android:id="@+id/tv_splash_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:visibility="invisible"/>
    
     </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="1.5"
        >
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:text="@string/hello_world" />
    
     <TextView
        android:id="@+id/tv_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="5.0dip"
        android:textColor="#ffffff"
        android:text="@string/kn_start_copyright"
        />

    <TextView
        android:id="@+id/tv_splash_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:text="@string/kn_start_copyright_2"
       />
    </LinearLayout>
</LinearLayout>
